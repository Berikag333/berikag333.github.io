        <li>
          <span class="label">LinkedIn</span>
          <a href={links.linkedin} target="_blank" rel="noopener noreferrer">
            linkedin.com/in/erikabgonzalezmuñoz
          </a>
        </li>

        <li>
          <span class="label">GitHub</span>
          <a href={links.github} target="_blank" rel="noopener noreferrer">
            github.com/Berikag333
          </a>
        </li>

        <li>
          <span class="label">Notion</span>
          <a href={links.notion} target="_blank" rel="noopener noreferrer">
            View my Notion portfolio page
          </a>
        </li>

        <li>
          <span class="label">Tableau</span>
          <a href={links.tableau} target="_blank" rel="noopener noreferrer">
            public.tableau.com/.../erika.gonzalez7036
          </a>
        </li>
      </ul>
    </div>

    <!-- Footer social icons -->
    <div class="icons">
      <a class="icon" href={links.github} target="_blank" rel="noopener noreferrer" aria-label="GitHub">
